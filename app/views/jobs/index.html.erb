<h1>Recent Jobs</h1>
 
<!--   <div class="row">
    <div class="col-md-3">Title</div>
    <div class="col-md-9">Description</div>
  </div>
  -->
  <% @jobs.each do |job| %>

  <div class="row">
    <div class="col-md-3"><a href = 'jobs/<%= job.id %>'><%= job.title %></a></div>
    <div class="col-md-9"><%= job.description.split.first(30).join(' ') %> (<a href = 'jobs/<%= job.id %>'>...</a>)</div>
  </div>

<% end %>