<%= form_for :job, url: jobs_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </p>

  <p>
    <%= f.label :salary %><br>
    <%= f.text_field :salary %>
  </p>

  <p>
    <%= f.label :hours_per_week %><br>
    <%= f.text_field :hours_per_week %>
  </p>

  <p>
    <%= f.label :duration %> (term vs. permanent)<br>
    <%= f.text_field :duration %>
  </p>

  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :qualifications %><br>
    <%= f.text_area :qualifications %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>