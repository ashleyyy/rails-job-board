<h2>Write a job posting for <em><%= current_user.email %></em>.</h2>

<%= form_for @job do |f| %>

  <% if @job.errors.any? %>
    <div class ="alert alert-danger alert-dismissible">
      
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

      <%= pluralize(@job.errors.count, "error") %> prevented the job from being saved:
      <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
 
  <div>
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>

  <div>
    <%= f.label :salary %><br>
    <%= f.text_field :salary %>
  </div>

  <div>
    <%= f.label :hours_per_week %><br>
    <%= f.text_field :hours_per_week %>
  </div>

  <div>
    <%= f.label :duration %> (term vs. permanent)<br>
    <%= f.text_field :duration %>
  </div>

  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :qualifications %><br>
    <%= f.text_area :qualifications %>
  </div>
 
  <div>
    <%= f.submit %>
  </div>
<% end %>